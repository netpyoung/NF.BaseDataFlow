{
    "version": "0.2.0",
    "configurations": [
      {
        "name": ".NET Script Debug",
        "type": "coreclr",
        "request": "launch",
        "program": "dotnet-script",
        "args": [
            "${file}",
            "--",
            "--help"
        ],
        "cwd": "${workspaceFolder}",
        "stopAtEntry": false,
      }
    ]
  }